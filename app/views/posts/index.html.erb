<div class="row">
	<div class="span9">
	  <% @posts.each do |post| %>
	  	<div class="post">
		    <h1><%= link_to post.title, post, :title => post.title %></h1>
		    <p><%= post.content %></p>
		    <hr />
		    <span class="date"><%= post.created_at.strftime("%a, %b %e - %Y at %l:%M") %></span>
		  </div>
	  <% end %>
	  <%= will_paginate @posts %>
	</div>
</div>